<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scrollbars="vertical">
    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <TextView
            android:padding="3dip"
            android:text="@string/tournament_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/tournament_constrains"
            android:prompt="@string/tournament_type"
            android:spinnerMode="dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />



        <TextView
            android:paddingTop="20dp"
            android:paddingStart="3dp"
            android:paddingLeft="3dp"
            android:text="@string/playoff_opponent_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/opponent_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />




        <TextView
            android:text="@string/playoff_opponent_name"
            android:id="@+id/opponent_name_text"
            android:paddingTop="20dp"
            android:paddingStart="3dp"
            android:paddingLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <EditText
            android:id="@+id/opponent_name"
            android:inputType="text"
            android:gravity="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />



        <TextView
            android:text="@string/playoff_min_score"
            android:id="@+id/min_score_text"
            android:paddingTop="20dp"
            android:paddingStart="3dp"
            android:paddingLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/min_score"
            android:inputType="number"
            android:gravity="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />


        <TextView
            android:text="@string/playoff_max_score"
            android:id="@+id/max_score_text"
            android:paddingTop="20dp"
            android:paddingStart="3dp"
            android:paddingLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/max_score"
            android:inputType="number"
            android:gravity="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="addPlayoff"
            android:layout_weight="1"
            android:text="@string/playoff_start"
            />
    </LinearLayout>
</ScrollView>



