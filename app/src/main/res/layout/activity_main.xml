<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ar.com.tzulberti.archerytraining.MainActivity">

    <TableLayout
        android:stretchColumns="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="3dip"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <TableRow>
            <TextView
                android:text="@string/distance"
                android:padding="3dip" />

            <EditText
                android:id="@+id/distance"
                android:gravity="right"
                android:inputType="number"
                />
        </TableRow>

        <TableRow>
            <TextView
                android:text="@string/arrowsAmount"
                android:padding="3dip" />

            <EditText
                android:id="@+id/arrowsAmount"
                android:gravity="right"
                android:inputType="number"
                />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            >
            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:onClick="start"
                android:layout_weight="1"
                android:text="@string/add"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            >
            <TextView
                android:text="@string/lastSerie"
                android:textAlignment="center"
                android:layout_weight="1"
                android:padding="3dip" />
        </TableRow>


        <TableRow>
            <TextView
                android:text="@string/distance"
                android:padding="3dip" />
            <TextView
                android:text="@string/arrowsAmountTableHeader"
                android:padding="3dip" />
            <TextView
                android:text="@string/datetime"
                android:padding="3dip" />
        </TableRow>


        <TableRow>
            <TextView
                android:id="@+id/lastDistance"
                android:padding="3dip" />

            <TextView
                android:id="@+id/lastArrowsAmount"
                android:padding="3dip" />

            <TextView
                android:id="@+id/lastDatetime"
                android:padding="3dip" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="@string/todayTotals"
                android:padding="3dip" />

            <TextView
                android:id="@+id/todayTotals"
                android:padding="3dip" />
        </TableRow>
    </TableLayout>

</android.support.constraint.ConstraintLayout>
